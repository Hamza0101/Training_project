<%
=begin%>
 <div container-fluid>
  <h1>Posts</h1>

<table class="table table-stripped">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class:"btn btn-secondary" %>
</div>
<br/>
<br/>
<br/>
<br/>
<%
=end%>
<div class="container-fluid">
<div class="card-deck">
  <% @posts.each do |post| %>

    <div class=" row">
      <div class="col-lg-6 mb-4">
        <div class="card " style="width:400px">
          <%= link_to image_tag post.post_image , class: 'card-img-top' %>
          <div class="card-body">
            <h4 class="card-title"><%= post.title %></h4>
            <% description=post.description %>
            <p class="card-text"><%= description%></p>
            <%= link_to 'Show', post, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
 </div>
</div>





<%
=begin%>
 <p class="card-text">
                    <small class="text-muted">
                        Last updated 3 mins ago
                    </small>
                </p>
<%
=end%>
